<section class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Trending Now</h3>
    <a href="/category/sofas" class="text-decoration-none">Xem tất cả</a>
  </div>

  <div id="trendingCarousel" class="carousel slide trending-carousel">
    <div class="carousel-inner" id="trendingInner">

      {{!-- render item thô, JS sẽ group --}}
      {{#each trendingProducts}}
        <div class="trending-item d-none">
          <div class="card h-100">
            <img src="{{image}}" class="card-img-top"
                 style="height:140px;object-fit:cover">
            <div class="card-body">
              <h6 class="card-title">{{name}}</h6>
              <p class="fw-semibold mb-2">{{price}}</p>
              <a href="/product/{{id}}" class="btn btn-sm btn-outline-primary">
                Xem
              </a>
            </div>
          </div>
        </div>
      {{/each}}

    </div>

    <!-- PREV -->
    <button class="carousel-control-prev" type="button"
            data-bs-target="#trendingCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>

    <!-- NEXT -->
    <button class="carousel-control-next" type="button"
            data-bs-target="#trendingCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>
</section>

<script src="/js/admin/home/trending.js"></script>
