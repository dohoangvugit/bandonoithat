<h2 class='mb-4'>Edit Product</h2>

<div class='card shadow-sm'>
    <div class='card-body'>

        <form
            action='/admin/products/{{product.id}}'
            method='POST'
            enctype='multipart/form-data'
        >

            <!-- NAME -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item name</label>
                <input
                    type='text'
                    name='name'
                    class='form-control'
                    value='{{product.name}}'
                    required
                />
            </div>

            <!-- PRICE -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item price</label>
                <input
                    type='number'
                    name='price'
                    class='form-control'
                    value='{{product.price}}'
                    required
                />
            </div>

            <!-- BRAND -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item brand</label>
                <input
                    type='text'
                    name='brand'
                    class='form-control'
                    value='{{product.brand}}'
                    required
                />
            </div>

            <!-- DESCRIPTION -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item description</label>
                <textarea
                    name='description'
                    class='form-control'
                    rows='3'
                >{{product.description}}</textarea>
            </div>

            <!-- CURRENT IMAGE -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Current image</label><br
                />
                <img
                    src='{{product.image}}'
                    width='120'
                    class='img-thumbnail'
                />
            </div>

            <!-- NEW IMAGE -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Change image</label>
                <input type='file' name='image' class='form-control' />
            </div>

            <!-- INVENTORY -->
            <div class='mb-4'>
                <label class='form-label fw-semibold'>In stock</label>
                <input
                    type='number'
                    name='currentInventory'
                    class='form-control'
                    value='{{product.inventory}}'
                    required
                />
            </div>

            <!-- ACTIONS -->
            <div class='d-flex gap-2'>
                <button type='submit' class='btn btn-primary'>
                    Update Product
                </button>

                <a href='/admin/products' class='btn btn-secondary'>
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>