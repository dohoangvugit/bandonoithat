<h2 class='mb-4'>Add Product</h2>

<div class='card shadow-sm'>
    <div class='card-body'>

        <form
            action='/admin/products'
            method='POST'
            enctype='multipart/form-data'
        >

            <!-- NAME -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item name</label>
                <input
                    type='text'
                    name='name'
                    class='form-control'
                    placeholder='Item name'
                    required
                />
            </div>

            <!-- PRICE -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item price</label>
                <input
                    type='number'
                    name='price'
                    class='form-control'
                    placeholder='Item price'
                    required
                />
            </div>

            <!-- BRAND -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item brand</label>
                <input
                    type='text'
                    name='brand'
                    class='form-control'
                    placeholder='Item brand'
                    required
                />
            </div>

            <!-- DESCRIPTION -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item description</label>
                <textarea
                    name='description'
                    class='form-control'
                    rows='3'
                    placeholder='Item description'
                ></textarea>
            </div>

            <!-- IMAGE -->
            <div class='mb-3'>
                <label class='form-label fw-semibold'>Item image</label>
                <input type='file' name='image' class='form-control' required />
            </div>

            <!-- INVENTORY -->
            <div class='mb-4'>
                <label class='form-label fw-semibold'>In stock</label>
                <input
                    type='number'
                    name='currentInventory'
                    class='form-control'
                    placeholder='Items in stock'
                    required
                />
            </div>

            <!-- ACTIONS -->
            <div class='d-flex gap-2'>
                <button type='submit' class='btn btn-primary'>
                    Add Item
                </button>

                <a href='/admin/products' class='btn btn-secondary'>
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>