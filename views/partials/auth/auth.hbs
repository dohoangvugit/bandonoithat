<div class="modal fade" id="authModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- TABS -->
      <div class="modal-header pb-0 border-0">
        <ul class="nav nav-tabs w-100">
          <li class="nav-item w-50 text-center">
            <button
              class="nav-link active w-100"
              data-bs-toggle="tab"
              data-bs-target="#signInTab"
              type="button">
              Đăng Nhập
            </button>
          </li>
          <li class="nav-item w-50 text-center">
            <button
              class="nav-link w-100"
              data-bs-toggle="tab"
              data-bs-target="#signUpTab"
              type="button">
              Đăng Kí
            </button>
          </li>
        </ul>

        <button
          type="button"
          class="btn-close position-absolute end-0 me-3 mt-2"
          data-bs-dismiss="modal">
        </button>
      </div>

      <!-- BODY -->
      <div class="modal-body pt-4">
        <div class="tab-content">

          <!-- ===== SIGN IN ===== -->
          <div class="tab-pane fade show active" id="signInTab">
            <h5 class="mb-4">Đăng Nhập</h5>

            <form method="POST" action="/auth/login">

              <div class="mb-3">
                <label class="form-label">Tên người dùng</label>
                <input
                  name="username"
                  class="form-control"
                  placeholder="Username">
              </div>

              <div class="mb-4">
                <label class="form-label">Mật khẩu</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="******************">
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <button class="btn btn-primary px-4">
                  Đăng Nhập
                </button>

                <a href="#" class="small">
                  Quên mật khẩu ?
                </a>
              </div>

            </form>
          </div>

          <!-- ===== SIGN UP ===== -->
          <div class="tab-pane fade" id="signUpTab">
            <h5 class="mb-4">Đăng Kí</h5>

            <form method="POST" action="/auth/register">

              <div class="mb-3">
                <label class="form-label">Tên người dùng</label>
                <input
                  name="username"
                  class="form-control"
                  placeholder="Username">
              </div>

              <!-- PHONE + FLAG (CHUẨN YÊU CẦU) -->
              <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <div class="input-group">
                  <span class="input-group-text bg-white">
                    <img
                      src="/img/flagvn.png"
                      alt="VN"
                      width="20"
                      height="14"
                      style="margin-right:6px">
                    +84
                  </span>
                  <input
                    name="phone"
                    class="form-control"
                    placeholder="Số điện thoại">
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                  name="email"
                  class="form-control"
                  placeholder="Email address">
              </div>

              <div class="mb-4">
                <label class="form-label">Mật khẩu </label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="******************">
              </div>

              <button class="btn btn-primary w-100">
                Đăng Kí
              </button>

            </form>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
